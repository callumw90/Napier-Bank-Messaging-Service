<Window x:Class="NapierBank.ViewMessages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NapierBank"
        mc:Ignorable="d"
        Title="View Messages" Height="386" Width="713">
    <Grid>
        <Button x:Name="btn_Next" Content ="Next" HorizontalAlignment="Left" Height="39" Margin="434,306,0,0" VerticalAlignment="Top" Width="104" Click="btn_Next_Click"/>
        <TextBox x:Name="txt_Msg" Height="291" Margin="113,10,105,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="487"/>
        <Button x:Name="btn_Prev" Content ="Previous" HorizontalAlignment="Left" Height="39" Margin="193,306,0,0" VerticalAlignment="Top" Width="104" Click="btn_Prev_Click"/>
        <Button x:Name="btn_Close" Content="Close" HorizontalAlignment="Left" Margin="10,10,0,0"  Height="30" VerticalAlignment="Top" Width="75" Click="btn_Close_Click"/>
    </Grid>
</Window>
